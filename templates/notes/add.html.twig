{% extends 'base.html.twig' %}

{% block title %}Hello NotesController!{% endblock %}

{% block body %}
{% if app.user %}
            <div class="mb-3 ">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
{% endif %}
    
    <form method="POST" action="{{ path('app_add_counter_guide') }}">
        <select name="role" data-controller="symfony--ux-autocomplete--autocomplete" required>
            <option value="">Wybierz rolę</option>
            <option value="Top">Top</option>
            <option value="Jungle">Jungle</option>
            <option value="Mid">Mid</option>
            <option value="ADC">ADC</option>
            <option value="Support">Support</option>
        </select>
        
        <input type="text" name="champion" placeholder="Champion" value="" required>
        <input type="text" name="targetChampion" placeholder="Target Champion" value="" required>
        <input type="text" name="notes" placeholder="Notes" value="" required>
       
        <input type="text" name="tree" placeholder="Tree" value="" required>
        
        <select name="rune1" data-controller="symfony--ux-autocomplete--autocomplete" required>
            <option value="">Wybierz runę 1</option>
            {% for rune in rune1 %}
                <option value="{{ rune.name }}">{{ rune.name }}</option>
            {% endfor %}
        </select>
        
        <select name="rune2" data-controller="symfony--ux-autocomplete--autocomplete" required>
            <option value="">Wybierz runę 2</option>
            {% for rune in rune2 %}
                <option value="{{ rune.name }}">{{ rune.name }}</option>
            {% endfor %}
        </select>
        
        <select name="rune3" data-controller="symfony--ux-autocomplete--autocomplete" required>
            <option value="">Wybierz runę 3</option>
            {% for rune in rune3 %}
                <option value="{{ rune.name }}">{{ rune.name }}</option>
            {% endfor %}
        </select>
        
        <select name="rune4" data-controller="symfony--ux-autocomplete--autocomplete" required>
            <option value="">Wybierz runę 4</option>
            {% for rune in rune4 %}
                <option value="{{ rune.name }}">{{ rune.name }}</option>
            {% endfor %}
        </select>
        
        
        <input type="submit" value="Submit">
        
    </form>
 
{% endblock %}